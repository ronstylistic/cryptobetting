<section id="login" class="mt-1 pb-5">
  <div class="container">

    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mx-auto">

        <div class="card rounded-0">
          <div class="card-header">
            <h3 class="mb-0 float-left">Join</h3>

            <a href="/" class="close" type="button" class="close" aria-label="Close">
  <span aria-hidden="true">&times;</span>
</a>
          </div>

          <div class="card-body">

            {{#if success}}
              <div class="alert alert-success">You successfully registered.</div>
            {{/if}}

            <form name="form" class="form" action="/auth/register" method="POST">
              <div class="form-group">
                <label for="firtname">Your firstname</label>
                <input type="text" class="form-control form-control-md rounded-0" name="firstname" required/>
                {{#if errors.firstname }}
                <small class="form-text text-danger">{{ errors.firstname.msg }}</small>
                {{/if}}
              </div>

              <div class="form-group">
                <label for="lastname">Your lastname</label>
                <input type="text" class="form-control form-control-md rounded-0" name="lastname" required/>
                {{#if errors.lastname }}
                <small class="form-text text-danger">{{ errors.lastname.msg }}</small>
                {{/if}}
              </div>

              <div class="form-group">
                <label for="email">Your email</label>
                <input type="email" class="form-control form-control-md rounded-0" name="email" required />
                {{#if errors.email }}
                <small class="form-text text-danger">{{ errors.email.msg }}</small>
                {{/if}}
              </div>

              <div class="form-group">
                <label for="password">Your password</label>
                <input type="password" class="form-control form-control-md rounded-0" name="password" required />
                {{#if errors.password }}
                <small class="form-text text-danger">{{ errors.password.msg }}</small>
                {{/if}}
              </div>

              <button type="submit" class="btn btn-primary btn-lg btn-block rounded-0">Submit</button>
              <p class="text-center mt-1"> Already have an account? <a href="/auth/login">Sign in </a> </p> 
            </form>

          </div>

        </div>
      </div>
    </div>
  </div>
</section>